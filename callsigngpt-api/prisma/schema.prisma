// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  tier      String   @default("free") // "free" | "basic" | "premium"
  name      String?
  phone     String? 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
